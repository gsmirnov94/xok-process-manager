{
  "name": "xok-process-manager",
  "version": "1.0.4",
  "description": "Process manager using PM2 with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "start:api": "ts-node src/server.ts",
    "dev:api": "nodemon --exec ts-node src/server.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "jest --detectOpenHandles",
    "example": "ts-node src/index.ts",
    "demo:api": "node examples/demo-api.js"
  },
  "keywords": [
    "process-manager",
    "pm2",
    "typescript",
    "node",
    "process",
    "management",
    "monitoring"
  ],
  "author": "gsmirnov94",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsmirnov94/xok-process-manager.git"
  },
  "bugs": {
    "url": "https://github.com/gsmirnov94/xok-process-manager/issues"
  },
  "homepage": "https://github.com/gsmirnov94/xok-process-manager#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "pm2": ">=5.0.0"
  },

  "dependencies": {
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "jest": "^30.0.5",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
